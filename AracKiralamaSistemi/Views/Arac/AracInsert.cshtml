@model AracKiralama.Entity.araclar

@{
    ViewBag.Title = "Araç Ekleme";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;border:1px solid bisque;background-color:bisque;border-radius:5px;">Araç Ekleme</h2>

@using (Html.BeginForm("AracInsert", "Arac", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

